<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.pyry.kayttoliittymat.MainActivity"
    tools:showIn="@layout/activity_main"
    android:background="#212121">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/passwordID"
        android:hint="Password"
        android:textColorHint="#3e3e3e"
        android:textAlignment="center"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:drawableTint="#3e3e3e"
        android:backgroundTint="#3e3e3e"
        android:textColor="#ffffff"
        android:textCursorDrawable="@drawable/custom_cursor"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/usernameID"
        android:textAlignment="center"
        android:hint="Username"
        android:textColorHint="#3e3e3e"
        android:layout_above="@+id/passwordID"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="24dp"
        android:textIsSelectable="false"
        android:backgroundTint="#3e3e3e"
        android:drawableTint="#3e3e3e"
        android:textColor="#ffffff"
        android:textCursorDrawable="@drawable/custom_cursor"/>


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="zHome"
        android:fontFamily="@string/app_name"
        android:textAlignment="center"
        android:textColor="#039BE5"
        android:textSize="70dp"
        android:layout_marginTop="53dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold" />


    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/loginButtonID"
        android:background="#212121"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_below="@+id/passwordID"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="75dp" />
</RelativeLayout>
