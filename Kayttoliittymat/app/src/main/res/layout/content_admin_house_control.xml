<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="?attr/colorPrimary"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.pyry.kayttoliittymat.adminHouseControl"
    tools:showIn="@layout/activity_admin_house_control"
    android:id="@+id/Add">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Modify residence"
        android:textColor="#039BE5"
        android:textSize="15dp"
        android:id="@+id/AddUsertextView"
        android:layout_below="@+id/modifyUserSettingsButtonID"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="45dp" />


    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Room1  "
        android:textColor="#ffffff"
        android:buttonTint="#039BE5"
        android:id="@+id/room1ModiSwitch"
        android:checked="false"
        android:layout_below="@+id/AddUsertextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp" />

    <CheckBox
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Ligth"
        android:buttonTint="#ffffff"
        android:textColor="#ffffff"
        android:id="@+id/Room1LigthModi"
        android:layout_below="@+id/room1ModiSwitch"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:checked="false"
        android:layout_marginTop="20dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lock"
        android:buttonTint="#ffffff"
        android:textColor="#ffffff"
        android:id="@+id/Room1LockModi"
        android:checked="false"
        android:layout_alignTop="@+id/Room1LigthModi"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temp"
        android:buttonTint="#ffffff"
        android:textColor="#ffffff"
        android:id="@+id/Room1TempModi"
        android:checked="false"
        android:layout_alignTop="@+id/Room1LockModi"
        android:layout_alignRight="@+id/modifyHousefinalButtonID"
        android:layout_alignEnd="@+id/modifyHousefinalButtonID" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Room2  "
        android:textColor="#ffffff"
        android:buttonTint="#ffffff"
        android:id="@+id/room2ModiSwitch"
        android:checked="false"
        android:layout_below="@+id/Room1LigthModi"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <CheckBox
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Ligth"
        android:buttonTint="#ffffff"
        android:textColor="#ffffff"
        android:id="@+id/Room2LigthModi"
        android:checked="false"
        android:layout_alignTop="@+id/Room2LockModi"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lock"
        android:buttonTint="#ffffff"
        android:textColor="#ffffff"
        android:id="@+id/Room2LockModi"
        android:checked="false"
        android:layout_below="@+id/room2ModiSwitch"
        android:layout_alignLeft="@+id/Room1LockModi"
        android:layout_alignStart="@+id/Room1LockModi"
        android:layout_marginTop="20dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temp"
        android:buttonTint="#ffffff"
        android:textColor="#ffffff"
        android:id="@+id/Room2TempModi"
        android:checked="false"
        android:layout_alignTop="@+id/Room2LockModi"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Room3  "
        android:textColor="#ffffff"
        android:buttonTint="#ffffff"
        android:id="@+id/room3ModiSwitch"
        android:checked="false"
        android:layout_below="@+id/Room2LigthModi"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <CheckBox
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Ligth"
        android:buttonTint="#ffffff"
        android:textColor="#ffffff"
        android:id="@+id/Room3LigthModi"
        android:checked="false"
        android:layout_below="@+id/room3ModiSwitch"
        android:layout_alignRight="@+id/room3ModiSwitch"
        android:layout_alignEnd="@+id/room3ModiSwitch"
        android:layout_marginTop="20dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lock"
        android:buttonTint="#ffffff"
        android:textColor="#ffffff"
        android:id="@+id/Room3LockModi"
        android:checked="false"
        android:layout_below="@+id/room3ModiSwitch"
        android:layout_alignLeft="@+id/Room2LockModi"
        android:layout_alignStart="@+id/Room2LockModi"
        android:layout_marginTop="20dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temp"
        android:buttonTint="#ffffff"
        android:textColor="#ffffff"
        android:id="@+id/Room3TempModi"
        android:checked="false"
        android:layout_alignTop="@+id/Room3LockModi"
        android:layout_alignLeft="@+id/Room2TempModi"
        android:layout_alignStart="@+id/Room2TempModi" />

    <Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Modify House"
    android:id="@+id/modifyHousefinalButtonID"
    android:background="#039BE5"
    android:textColor="#ffffff"
        android:layout_below="@+id/Room3LigthModi"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete House"
        android:id="@+id/deleteHouseButtonID"
        android:background="#c62828"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/modifyHousefinalButtonID"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="80dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Room name"
        android:textColorHint="#3e3e3e"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:ems="8"
        android:id="@+id/adminHouseControlRoom1NAme"
        android:layout_above="@+id/Room1LigthModi"
        android:layout_toRightOf="@+id/room1ModiSwitch"
        android:layout_toEndOf="@+id/room1ModiSwitch" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Room name"
        android:textColorHint="#3e3e3e"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:ems="8"
        android:id="@+id/adminHouseControlRoom2NAme"
        android:layout_above="@+id/Room2LigthModi"
        android:layout_toRightOf="@+id/room2ModiSwitch"
        android:layout_toEndOf="@+id/room2ModiSwitch" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Room name"
        android:textColorHint="#3e3e3e"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:ems="8"
        android:id="@+id/adminHouseControlRoom3NAme"
        android:layout_above="@+id/Room3TempModi"
        android:layout_toRightOf="@+id/room3ModiSwitch"
        android:layout_toEndOf="@+id/room3ModiSwitch" />


</RelativeLayout>
