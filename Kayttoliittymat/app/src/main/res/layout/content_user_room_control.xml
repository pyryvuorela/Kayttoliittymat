<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.pyry.kayttoliittymat.userRoomControl"
    tools:showIn="@layout/activity_user_room_control"
    android:background="?attr/colorPrimary">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text=""
        android:id="@+id/userRoomControlRoomname"
        android:textColor="#039BE5"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Switch
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:text="LIGHTS"
        android:id="@+id/userRoomControlLigth"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/userRoomControlRoomname"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="50dp" />
    <Switch
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:text="LOCK"
        android:id="@+id/userRoomControlLock"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/userRoomControlLigth"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="50dp" />

    <SeekBar
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/userRoomControlTemp"
        android:layout_below="@+id/userRoomControlLock"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:backgroundTint="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=""
        android:textSize="30dp"
        android:id="@+id/userRoomControltempnumber"
        android:textColor="#ffffff"
        android:layout_below="@+id/userRoomControlTemp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

</RelativeLayout>
